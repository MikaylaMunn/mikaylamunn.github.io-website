<div class="col-md-6 col-12 mb-4 card">
  <div class="hovereffect">
    <img class="portfolio-img" src="<%- config.root %><%- item.cover_image || theme.default_cover_image %>" alt="<%- item.title || theme.default_post_title || "Untitled" %>">
    <a href="<%- config.root %><%- item.path %>">
      <div class="overlay">
        <span class="overlay-text"><h1><%- item.title || theme.default_post_title || "Untitled" %></h1>
          <p><%- item.subCategories %></p>
        </span>
      </div>
    </a>
  </div>
</div>
